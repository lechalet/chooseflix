{% extends 'base.html.twig' %}

{% block title %}Movie index
{% endblock %}

{% block body %}
	{% for movie in movies %}
		<div class="d-flex flex-row">
			<div class="card d-flex border-secondary  m-3" style="width: 18rem;">
				<img src="{{ movie.link }}" class="card-img-top" alt="image du film" width="100" height="400">
				<div class="card-body">
					<h5 class="card-title">{{ movie.name }}</h5>
					<h5 class="card-title">{{ movie.year }}</h5>
				</div>
				<h5 class="card-title">Liste des acteurs</h5>
				{% for movi in movie.actors %}
					<ul class="list-group list-group-flush">
						<div class="d-flex flex-row">
							<li class="list-group-item">{{ movi.name }}</li>
							<img class="rounded float-left mt-1 mb-1 ml-1" src="{{ movi.picture }}" alt="actor image" width="50" height="50">
						</div>
					</ul>
				{% endfor %}
			</br>
			<h5 class="card-title">Le r√©alisateur</h5>
			<ul class="list-group list-group-flush">
				<div class="d-flex flex-row">
					<li class="list-group-item">{{ movie.director.name }}</li>
					<img class="rounded float-left mt-1 mb-1 ml-1" src="{{ movie.director.picture }}" alt="actor image" width="50" height="50">
				</div>
			</ul>
			<div class="card-body">
				<a href="{{ path('movie_edit', {'id': movie.id}) }}" class="card-link">Editer les information du film</a>
				{{ include('movie/_delete_form.html.twig') }}
			</div>
		</div>
	{% else %}
		<tr>
			<td colspan="5">no records found</td>
		</tr>
	{% endfor %}
{% endblock %}
