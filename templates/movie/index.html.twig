{% extends 'base.html.twig' %}

{% block title %}Movie index
{% endblock %}

{% block body %}
	<h1>Movie index</h1>
	<table class="table">
		<thead>
			<tr>
				<th>Name</th>
				<th>Link</th>
				<th>Year</th>
				<th>acteurs</th>
				<th>photo acteurs</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for movie in movies %}
				<tr>
					<td>{{ movie.name }}</td>
					<td>
						<iframe src="{{ movie.link }}"></iframe>
					</td>
					<td>{{ movie.year }}</td>
					{% for movi in movie.actors %}
						<td>
							{{ movi.name }}
						</td>
						<td>
							<iframe src="{{ movi.picture }}"></iframe>
						</td>
					{% endfor %}
					<td>
						<a href="{{ path('movie_show', {'id': movie.id}) }}">show</a>
						<a href="{{ path('movie_edit', {'id': movie.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('movie_new') }}">Create new</a>
{% endblock %}
